<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://Java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<!--web.xml: 서버(톰캣 등)에게 “이 웹앱은 이렇게 동작해야 해요”라고 알려주는 설정 파일 -->

	<!-- The definition of the Root Spring Container shared by all Servlets and Filters -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring/root-context.xml</param-value> <!--*ContextLoaderListener 설정을 여기에 한다 -->
	</context-param>
	
	<!-- **서버는 맨처음 web.xml 파일을 읽는데, DispatcherServlet 하기전에 ContextLoaderListener를 맨처음 만나게 된다  
	     ContextLoaderListener가 DB를 연결하는 설정파일을 가지고 있다,
	     ContextLoaderListener가 MyBatic를 통해서 JDBC를 돌리게 한다 -->
	<!-- Creates the Spring Container shared by all Servlets and Filters -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Processes application requests -->
	<!-- **DispatcherServlet: 사용자의 요청을 먼저 받음 → 처리할 컨트롤러, 뷰, 모델 등을 결정 → 최종 응답을 반환한다 -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value> <!--**DispatcherServlet이 생성이 될 떄 servlet-context.xml를 참조한다 -->
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
		
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

</web-app>
